<header>
  <div id="logo">Bookmark Manager</div>
  <a href="/links/new" class="add-link button_up highlighted">Add link</a>
  <div id="user-links">
    <% if current_user %>
      <span id="welcome-message">
        Welcome, <%= current_user.email %>
      </span>
  
      <form id="sign-out" method="post" action="/sessions">
        <input type="hidden" name="_method" value="delete">
        <input type="submit" value="Sign out">
      </form>

    <% else %>
      <a href="/users/new" id="sign-up" class="new-user button_up">Sign up</a>
      <a href="/sessions/new" id="sign-in" class="new-session button_in">Sign in</a>
    <% end %>
  
  </div>
</header>